<Project>
  <ItemGroup>
    <SourceGenerator Include="$(MSBuildThisFileDirectory)..\bin\$(Configuration)\netstandard2.0\ReFit.Generator.dll"
            Condition="Exists('$(MSBuildThisFileDirectory)..\bin')" />
    <SourceGenerator Include="$(MSBuildThisFileDirectory)..\tools\ReFit.Generator.dll"
            Condition="Exists('$(MSBuildThisFileDirectory)..\tools')" />
  </ItemGroup>
  
  <ItemGroup Condition="Exists('$(MSBuildThisFileDirectory)..\bin')">
    <UpToDateCheck Include="**\*.cs" Exclude="bin\**\*.cs;obj\**\*.cs" />
  </ItemGroup>
</Project>